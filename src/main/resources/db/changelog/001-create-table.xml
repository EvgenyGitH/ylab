<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.5.xsd"
        logicalFilePath="db/changelog/001-create-table.xml">

    <changeSet id="001-create-users-table" author="ylab_app">
        <createTable tableName="users">
            <column name="id" type="SERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="login" type="VARCHAR(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="password" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="002-create-room-table" author="ylab_app">
        <createTable tableName="room">
            <column name="id" type="SERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="room_name" type="VARCHAR(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="description" type="TEXT"/>
        </createTable>
    </changeSet>

    <changeSet id="003-create-workplace-table" author="ylab_app">
        <createTable tableName="workplace">
            <column name="id" type="SERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="workplace_number" type="INTEGER">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="description" type="TEXT"/>
        </createTable>
    </changeSet>

    <changeSet id="004-create-booking-room-table" author="ylab_app">
        <createTable tableName="booking_room">
            <column name="booking_id" type="SERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="room_name" type="VARCHAR(255)">
                <constraints nullable="false"
                             foreignKeyName="fk_booking_room"
                             references="room(room_name)"/>
            </column>
            <column name="user_login" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="start_time" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="end_time" type="TIMESTAMP"/>
        </createTable>

    </changeSet>

    <changeSet id="005-create-booking-workplace-table" author="ylab_app">
        <createTable tableName="booking_workplace">
            <column name="booking_id" type="SERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="workplace_number" type="INTEGER">
                <constraints nullable="false"
                             foreignKeyName="fk_booking_workplace"
                             references="workplace(workplace_number)"/>


            </column>
            <column name="user_login" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="start_time" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="end_time" type="TIMESTAMP"/>
        </createTable>

    </changeSet>

</databaseChangeLog>
